  <!--start section header -->
<div id="header" class="home" style="position:relative;">
</div>
  
<div id="about">
  <div class="container">

       <!-- start section journal -->
  <div id="portfolio" class="text-center paddsections">
    
    <!--<div class="container">-->
      <div class="row">
        <div class="col-md-12">
         
         <div class="portfolio-list">
            <ul class="nav list-unstyled" id="portfolio-flters">
              
              <li class="filter filter-active" data-filter=".all">전체</li>
              <li class="filter" data-filter=".게임">게임</li>
              <li class="filter" data-filter=".코딩">코딩</li>
              <li class="filter" data-filter=".언어">언어</li>
              <li class="filter" data-filter=".뷰티">뷰티</li>
              <li class="filter" data-filter=".운동">운동</li>
              <li class="filter" data-filter=".음악">음악</li>
            </ul>
  
          </div> 
          
           <div class="portfolio-container">
            <% @posts.each do |post| %>
              <div class="col-lg-3 col-md-6 portfolio-thumbnail all <%=post.category%>">
                <div style="border: 1px solid rgba(0, 0, 0, 0.23);">
       
                  <a href="/posts/<%=post.id%>" class="portfolio-box">
                  <div> 
                    <% if post.image.main.url.nil? %>
                      <img src="/assets/giventake.png" alt="img">
                    <% else %>
                      <img src='<%= post.image.main %>' alt='img'>   
                    <% end %>
                    </div>
                    
                    <div style="font-size: 10pt; text-align: left; padding:15px;">
                      <p>[<%= post.category %>] <%= post.title %>
                      <% if post.state != "-1" %>
                      <span class="badge badge-danger">마감</span>
                      <%end%></p>
                      <p><cap><i class='bx bx-map'></i><%= post.address[0] %> |</cap> <%= User.find(post.user_id).name %></p>
                    </div>
                    <div class='portfolio-box-caption'>
                      
                    </div>
                  </a>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <!--</div>-->
  </div>
  <!-- End section journal -->
 </div>
  </div>
