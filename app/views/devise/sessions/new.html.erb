<%= form_for(resource, :html => {:class => "login100-form validate-form flex-sb flex-w"}, as: resource_name, url: session_path(resource_name)) do |f| %>
 <span class="login100-form-title p-b-51">
		로그인
	</span>
  <div class="wrap-input100 validate-input m-b-16" data-validate = "Username is required">
    <%= f.email_field :email, :class => 'input100', autofocus: true, autocomplete: "email", placeholder: "아이디를 입력해주세요"%>
    <span class="focus-input100"></span>
  </div>

  <div class="wrap-input100 validate-input m-b-16" data-validate = "Password is required">
    <%= f.password_field :password, :class => 'input100', autocomplete: "off", placeholder: "비밀번호를 입력해주세요"%>
    <span class="focus-input100"></span>
  </div>

  <div class="container-login100-form-btn m-t-17">
    <%= f.submit "로그인", :class => 'login100-form-btn' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
